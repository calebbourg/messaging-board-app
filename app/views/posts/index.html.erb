
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
		</div>
	    	<div class="col-md-6">
	    		<div class="row">
	    			<% if user_signed_in? %>
	    		  		<a class="btn btn-default btn-block" data-toggle="modal" data-target="#addPostModal" id="add-post"> Add a New Post</a>
	    		  	<% else %>
						<a class="btn btn-default btn-block disabled" id="add-post"> Must be logged in to Post</a>
	    		  	<% end %> 
	    		</div>
	    	    </br>
	    	</br>

	    		<div class="row">
	    	    	<%= render partial: 'addpost' %>
	    	    </div>
	    	    <div class="row">
	    	    	<%= paginate @posts %>
                	<%= render partial: 'post', collection: @posts %>
				</div>
	    	</div>
    </div>
</div>
